    },
    "ApiGatewayMethodWorkoutGet": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "HttpMethod": "GET",
        "RequestParameters": {},
        "ResourceId": {
          "Ref": "ApiGatewayResourceWorkout"
        },
        "RestApiId": {
          "Ref": "ApiGatewayRestApi"
