        "Runtime": "nodejs14.x",
        "FunctionName": "fitnessapp-dev-getWorkout",
        "MemorySize": 128,
        "Timeout": 6,
        "Description": "Get workouts from different categories",
        "Environment": {
          "Variables": {
            "IMPORT_DATA_S3_BUCKET": "importdatabucket",
            "PRE_DEFINED_WORKOUT_TABLE": "pre_defined_workouts"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
