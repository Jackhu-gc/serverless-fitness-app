        "CodeSha256": "rEhZHd8jzpMjWAe2w+9BGQLT8IAkEwxIXGUJ4BleKoU=",
        "Description": "Get workouts from different categories"
      }
    },
    "S3BucketImportdatabucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "importdatabucket",
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "ImportDataLambdaFunction",
                  "Arn"
                ]
              },
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "suffix",
                      "Value": ".json"
                    }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [
        "ImportDataLambdaPermissionImportdatabucketS3"
      ]
    },
    "ImportDataLambdaPermissionImportdatabucketS3": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "ImportDataLambdaFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "s3.amazonaws.com",
        "SourceArn": {
          "Fn::Join": [
            "",
            [
              "arn:",
              {
                "Ref": "AWS::Partition"
              },
              ":s3:::importdatabucket"
            ]
          ]
        },
        "SourceAccount": {
          "Ref": "AWS::AccountId"
        }
      }
    },
    "ApiGatewayRestApi": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": "dev-fitnessapp",
